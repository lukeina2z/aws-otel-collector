            "name": "Launch adot otel-col",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "asRoot": false,
            "stopOnEntry": false,
            "linux": {
                "program": "${workspaceFolder}/build/xray/xray"
            },
            "program": "${workspaceFolder}/bin/awscollector_mac_arm64_debug",
